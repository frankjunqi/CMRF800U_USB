<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="机器序列号" >
        <EditTextPreference
            android:defaultValue="AA BB AA BB AA BB AA BB"
            android:dialogMessage="请输入机器序列号"
            android:key="sys_num"
            android:summary="输入机器序列号用于设置"
            android:title="序列号" />

        <Preference
            android:key="sys_set_num"
            android:summary="设置机器序列号"
            android:title="设置序列号" />
        <Preference
            android:key="sys_get_num"
            android:summary="获取机器序列号"
            android:title="获取序列号" />
    </PreferenceCategory>
    <PreferenceCategory android:title="LED/Buzzer" >
        <EditTextPreference
            android:defaultValue="18"
            android:key="sys_con_circle"
            android:summary="输入LED/BUZZER的周期"
            android:title="LED/BUZZER周期" />
        <EditTextPreference
            android:defaultValue="4"
            android:key="sys_con_time"
            android:summary="输入LED/BUZZER的次数"
            android:title="LED/BUZZER次数" />

        <Preference
            android:key="sys_con_led"
            android:summary="控制LED闪烁周期与次数"
            android:title="控制LED" />
        <Preference
            android:key="sys_con_buzzer"
            android:summary="控制Buzzer鸣叫周期与次数"
            android:title="控制Buzzer" />
    </PreferenceCategory>
    <PreferenceCategory android:title="版本号" >
        <Preference
            android:key="sys_get_ver"
            android:summary="获取机器版本号"
            android:title="获取版本号" />
    </PreferenceCategory>

</PreferenceScreen>